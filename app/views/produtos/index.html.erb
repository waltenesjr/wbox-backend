<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Id</th>
      <th>Data Vencimento</th>
      <th>Estabelecimento</th>
      <th>Usuario</th>
      <th>Data de cadatro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><img src='data:image/jpeg;base64,<%= produto.imagem %>' width="100" heingth="100"/></td>
        <td><%= produto.id %></td>
        <td><%= produto.data_vencimento %></td>
        <td><%= produto.estabelecimento.nil? ? '' : produto.estabelecimento.nome %></td>
        <td><%= produto.usuarios.nil? ? '' : produto.usuarios.first.nil? ? '' : produto.usuarios.first.email %></td>
        <td><%= produto.created_at %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

